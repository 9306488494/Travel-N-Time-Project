<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Toolbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/drawable_red">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/GoBack"
            app:srcCompat="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="YOUR PROFILE"/>
    </LinearLayout>
    <!--Pic mobile no and name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/social_back_top2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.6">



                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:id="@+id/backImg"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imageChange"
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:layout_height="100dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|center"
                        android:autofillHints="Edit image"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/edit_pic"
                        app:srcCompat="@drawable/ic_edit" />
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAllCaps="true"
                    android:id="@+id/user_name"
                    android:textSize="20dp"
                    android:textColor="@color/drawable_red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="mob"
                    android:id="@+id/user_mob"
                    android:textSize="15dp"
                    android:textColor="@color/drawable_red"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="email"
                    android:id="@+id/user_email"
                    android:textSize="15dp"
                    android:textColor="@color/drawable_red"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--options start from here -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/division"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/user_setting"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="PROFILE SETTING"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <!--Profile Setting-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/edit_profile"
            android:text="Edit Profile"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/drawable_red"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/change_pass"
            android:text="Change Password"/>
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/drawable_red"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/kycupload"
            android:text="Upload KYC"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/drawable_red"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/downloadKYC"
            android:text="Download KYC"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/drawable_red"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/wallet"
            android:text="Wallet"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/drawable_red"></View>
    </LinearLayout>
    <!--My Trip-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/division"
        android:layout_gravity="center"
        android:id="@+id/tripLay"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/transaction"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="MY TRIP"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tripLay1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/Upcoming_trip"
            android:text="Upcoming Trip"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/drawable_red"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/Past_trip"
            android:text="Past Trip"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/drawable_red"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/Request_new_trip"
            android:text="Request New Trip"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/drawable_red"></View>
    </LinearLayout>
    <!--Support-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/division"
        android:layout_gravity="center"
        android:id="@+id/supportLay"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/support"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="SUPPORT"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/supportLay1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/About_us"
            android:text="About Us"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/drawable_red"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/contact_us"
            android:text="Contact_us"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/drawable_red"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/privacy"
            android:text="Privacy Policy"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/drawable_red"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/double_right_arrow"
            android:textColor="@color/drawable_red"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:id="@+id/logout"
            android:text="Logout"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/drawable_red"></View>
    </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <!--options closer-->
    <!--Text View for mobile updates layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/drawable_red"
        android:layout_gravity="center"
        android:id="@+id/updateLay"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="UPDATE PANEL"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <!-- Update layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updateLay1"
        android:background="@color/white_trans"
        android:visibility="gone"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="48dp"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/drawable_red"
                        android:background="@drawable/edittext3"
                        android:hint="Enter Mobile no"
                        android:id="@+id/updateMob_txt"/>
                    <Button
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/button3"
                        android:text="Update Mobile no"
                        android:id="@+id/mob_update_btn"
                        android:textAllCaps="false"
                        android:textSize="16dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="16dp"
                        android:inputType="text"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="48dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:maxLength="10"
                        android:textColor="@color/drawable_red"
                        android:hint="Enter email id/User id"
                        android:background="@drawable/edittext3"
                        android:id="@+id/newEmail_txt"/>
                    <Button
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/button3"
                        android:text="Update EmailID"
                        android:textAllCaps="false"
                        android:id="@+id/newEmail_btn"
                        android:textSize="16dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="48dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:gravity="center"
                        android:textColor="@color/drawable_red"
                        android:background="@drawable/edittext3"
                        android:hint="Enter New Password"
                        android:id="@+id/newPass_txt"/>
                    <Button
                        android:layout_width="220dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/button3"
                        android:text="Update Password"
                        android:textAllCaps="false"
                        android:id="@+id/newMob_btn"
                        android:textSize="16dp"/>

                </LinearLayout>
            </ScrollView>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|top"
                android:id="@+id/close_me"
                android:src="@drawable/close_it">
            </ImageView>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>