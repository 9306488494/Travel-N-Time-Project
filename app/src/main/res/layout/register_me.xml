<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--Toolbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/drawable_red"
        android:id="@+id/main_title"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/title_name"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Loading..."
            android:textStyle="bold"/>

    </LinearLayout>

    <!--Registration Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_gravity="center"
        android:background="@drawable/reg_backend"
        android:id="@+id/reg_lay"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            android:alpha="0.7"
            android:background="@color/drawable_red"
            app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="380dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColorHint="@color/drawable_red"
                        android:hint="NAME"
                        android:lines="1"
                        android:gravity="center"
                        android:textColor="@color/drawable_red"
                        android:id="@+id/reg_name"
                        tools:ignore="Autofill,TextFields" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColorHint="@color/drawable_red"
                        android:textColor="@color/drawable_red"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="PHONE NO"
                        android:lines="1"
                        android:inputType="number"
                        android:id="@+id/reg_phone"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColorHint="@color/drawable_red"
                    android:textColor="@color/drawable_red"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:hint="EMAIL ID"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:id="@+id/reg_email"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColorHint="@color/drawable_red"
                    android:textColor="@color/drawable_red"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:hint="PASSWORD"
                    android:lines="1"
                    android:inputType="textPassword"
                    android:id="@+id/reg_pass"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColorHint="@color/drawable_red"
                    android:textColor="@color/drawable_red"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:inputType="textPassword"
                    android:hint="CONFIRM PASSWORD"
                    android:lines="1"
                    android:id="@+id/reg_confirmPass"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:id="@+id/reg_btn"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:text="Login if already registered"
                        android:textColor="@color/drawable_red"
                        android:id="@+id/already_registered_user"/>

                </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
<!--Login Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:id="@+id/login_lay"
        android:background="@drawable/login_back"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardPreventCornerOverlap="true"
            android:alpha="0.7"
            android:requiresFadingEdge="vertical|horizontal"
            android:keepScreenOn="true"
            android:fadeScrollbars="true"
            android:fadingEdge="horizontal|vertical"
            android:fadingEdgeLength="12dp"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:focusedByDefault="true"
            app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="270dp"
                    android:layout_margin="2dp"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/drawable_red"
                        android:hint="Email Id/ User id"
                        android:textColor="@color/drawable_red"
                        android:id="@+id/login_email"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColorHint="@color/drawable_red"
                        android:textColor="@color/drawable_red"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:id="@+id/login_pass"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_button"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:id="@+id/login_btn"/>

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/resetText"
                    android:textColor="@color/drawable_red"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_marginTop="15dp"
                    android:text="Forgot Passwword"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/passwordResettxt"
                        android:textColor="@color/drawable_red"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:layout_marginTop="10dp"
                        android:text="Reset your password"/>

                </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <!--forget Password Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/passreset_back"
        android:layout_gravity="center"
        android:id="@+id/reset_lay"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            android:alpha="0.7"
            android:requiresFadingEdge="vertical|horizontal"
            android:keepScreenOn="true"
            android:fadeScrollbars="true"
            android:fadingEdge="horizontal|vertical"
            android:fadingEdgeLength="12dp"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:focusedByDefault="true"
            android:background="@color/drawable_red"
            app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="190dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/drawable_red"
                        android:hint="EMAIL ID"
                        android:textColor="@color/drawable_red"
                        android:id="@+id/reset_email"/>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset Password"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                       android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:background="@drawable/rounded_button"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:id="@+id/reset_btn"/>


                </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <!--Message propolet-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/passreset_back"
        android:layout_gravity="center"
        android:id="@+id/message_lay"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            android:alpha="0.7"
            android:requiresFadingEdge="vertical|horizontal"
            android:keepScreenOn="true"
            android:fadeScrollbars="true"
            android:fadingEdge="horizontal|vertical"
            android:fadingEdgeLength="12dp"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:focusedByDefault="true"
            android:background="@color/drawable_red"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="190dp"
                android:background="@color/white"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/message_txt"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="70dp"
                android:text="Loading..."
                android:textSize="20dp"
                android:textColor="@color/drawable_red"
                android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/message_subTxt"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Loading"
                    android:textSize="12dp"

                    android:textColor="@color/drawable_red"
                    android:textStyle="bold"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <!--Password reset Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:id="@+id/resetNewpass_lay"
        android:visibility="gone"
        android:background="@drawable/login_back"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardPreventCornerOverlap="true"
            android:alpha="0.7"
            android:requiresFadingEdge="vertical|horizontal"
            android:keepScreenOn="true"
            android:fadeScrollbars="true"
            android:fadingEdge="horizontal|vertical"
            android:fadingEdgeLength="12dp"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:focusedByDefault="true"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="250dp"
                android:layout_margin="2dp"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/drawable_red"
                    android:hint="Old Password"
                    android:textColor="@color/drawable_red"
                    android:id="@+id/old_pass_txt"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColorHint="@color/drawable_red"
                    android:textColor="@color/drawable_red"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:id="@+id/new_pass"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColorHint="@color/drawable_red"
                    android:textColor="@color/drawable_red"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Email id"
                    android:inputType="textEmailAddress"
                    android:id="@+id/my_email"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset New password"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:id="@+id/reset_new_pass"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <!--Govt Docs upload-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/KYCdoc"
        android:background="@drawable/doc_background"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/light_yellow"
            android:id="@+id/kyc_popup_message"
            app:cardPreventCornerOverlap="true"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"

                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Link your KYC"
                    android:hint="Loading..."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Dear customer, please upload your kyc documents below. \n\n Need to upload a photo-copy or a captured image. \n If you are doing this later then close and move further"
                    android:hint="Loading..."/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:keepScreenOn="true"
            android:fadeScrollbars="true"
            android:fadingEdge="horizontal|vertical"
            android:fadingEdgeLength="12dp"
            android:fitsSystemWindows="true"
            android:focusable="true"
            android:backgroundTint="@color/drawable_red"
            android:focusedByDefault="true"
            app:cardCornerRadius="2dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingRight="35dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose documents below"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:autofillHints="Choose Documents" />
            </LinearLayout>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/close_it"
                    android:id="@+id/closeMe"/>

            </FrameLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>



</LinearLayout>