<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_brown"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sixteen_sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Loading..."
            android:fontFamily="@font/reg"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/F1current_date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:weightSum="2">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/F1txtTo"
            android:textStyle="bold"
            android:textSize="@dimen/sixteen_sp"
            android:text="Loading..."
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:layout_weight="0.7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/F1txtFrom"
                android:textStyle="bold"
                android:textSize="@dimen/sixteen_sp"
                android:text="Loading..."
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/left_right_arrow"
                android:layout_weight="1.3"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/F1dept_time"
            android:text="Loading..."
            android:textColor="@color/black"
            android:textSize="10dp"
            android:paddingLeft="5dp"/>
        <!--Button and image of flight-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--Buttons and the download and view-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/F1Cardbtn"
                    android:visibility="gone"
                    android:layout_marginLeft="2dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="@color/dark_green"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="4dp">
               <TextView
                   android:layout_width="180dp"
                   android:layout_height="40dp"
                   android:layout_gravity="center"
                   android:textColor="@color/white"
                   android:textSize="18dp"
                   android:fontFamily="@font/dr"
                   android:textStyle="bold"
                   android:id="@+id/F1status_btn"
                   android:gravity="center"
                   android:text="Loading.."/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/F1Cardbtn1"
                    android:visibility="gone"
                    android:layout_marginLeft="2dp"
                    app:cardElevation="2dp"
                    android:backgroundTint="@color/drawable_red"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="4dp">
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:fontFamily="@font/dr"
                        android:textStyle="bold"
                        android:id="@+id/F1status_btn1"
                        android:gravity="center"
                        android:text="Loading.."/>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/F1download"
                        android:textSize="14dp"
                        android:textColor="@color/drawable_red"
                        android:textStyle="bold"
                        android:text="Loading..."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:textColor="@color/drawable_red"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:id="@+id/F1view"
                        android:text="Loading..."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/drawable_red"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:id="@+id/F1show"
                        android:text="Show"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/F1img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/drawable_red"
                    android:textStyle="bold"
                    android:id="@+id/F1flight_name"
                    android:text="Loading..."/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>